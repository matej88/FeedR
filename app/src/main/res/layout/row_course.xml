<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_course_overview"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/card_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:id="@+id/card_course_name"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/card_img"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Code"
            android:layout_below="@+id/card_course_name"
            android:id="@+id/card_course_code"

            android:layout_toRightOf="@+id/card_img"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:text="Students"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_course_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:id="@+id/row_studentsTv"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:textSize="10sp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="22dp"
            android:id="@+id/card_course_studentsSub"
            android:textSize="18sp" />




    </RelativeLayout>

</android.support.v7.widget.CardView>