<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.chalmers.exjobb.feedr.fragments.LiveSessionFragment"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
        android:padding="16dp"
    android:background="@color/colorAccent"
    android:id="@+id/liveSession_rr">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Rating"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/ls_rating_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:textSize="32dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="8dp"

            android:layout_below="@+id/ls_rating_tv"
            android:id="@+id/ls_rating"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedbacks count:"
                android:textColor="#fff"
                android:id="@+id/ls_feedbacks_tv"
                android:layout_alignParentBottom="true"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:id="@+id/ls_feedbacks"
                android:layout_alignParentBottom="true"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/ls_feedbacks_tv"
                android:paddingLeft="8dp"/>





</RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedbacks"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/liveSession_rr"
        android:id="@+id/feedbackTV"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/session_feedback_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F9Fa"
        android:layout_below="@+id/feedbackTV"/>


</RelativeLayout>
