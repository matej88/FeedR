<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.chalmers.exjobb.feedr.fragments.LoginFragment"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">


    <TextView
        android:text="FeedbackLoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/login_textview1"
        android:textSize="36sp" />

    <TextView
        android:text="Teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_textview1"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_textview2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="131dp"
        android:id="@+id/email_editText"
        android:hint="email"
        android:layout_below="@+id/login_textview2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/email_editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/password_editText"
        android:hint="password" />

    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/signIn_button" />

    <TextView
        android:text="Not registered yet? Then register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signIn_button"
        android:layout_alignEnd="@+id/login_textview2"
        android:layout_marginTop="27dp"
        android:id="@+id/register_textView" />

    <Button
        android:text="here"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/register"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:background="#fff"
        style="@style/Widget.AppCompat.Button.Small"
        android:textColor="#048"
        android:layout_alignBaseline="@+id/register_textView"
        android:layout_alignBottom="@+id/register_textView"
        android:layout_toEndOf="@+id/signIn_button" />
</RelativeLayout>
