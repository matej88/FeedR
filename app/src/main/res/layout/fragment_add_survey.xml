<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/linearLayout"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Survey"
        android:layout_marginTop="26dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/add_survey_tv"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter survey name"
        android:id="@+id/add_survey_name_et"
        android:layout_below="@+id/add_survey_tv"
        android:layout_marginTop="28dp"
        android:textSize="14dp"
        android:padding="8dp"


        android:background="#eee"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/add_survey_name_et"
        android:id="@+id/add_survey_random_layout">
        <EditText
            android:id="@+id/questionIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/addQuestion"
            android:hint="Enter your question"
            android:textSize="14dp"
            android:padding="8dp"


            android:background="#eee"/>
        <Button
            android:id="@+id/addQuestion"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:text="+"

            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:id="@+id/add_survey_questions_tv"
        android:layout_below="@+id/add_survey_random_layout"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Add Survey"
        android:id="@+id/btn_add_survey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#0076FF"
        android:textColor="#fff"

        />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/add_survey_questions_tv">

    </LinearLayout>

</RelativeLayout>